<h3>{{viewTitle}}</h3>
<form action="/books" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{books._id}}">
    <div class="form-group col-md-12">
        <label for="#">Book Name</label>
        <input type="text" class="form-control" name="bookName"
            placeholder="Enter book Name" value="{{books.bookName}}">
        <div class="text-danger">
            {{books.bookNameError}}
        </div>
    </div>
    <div class="form-group col-md-12">
        <label for="#">Book Price</label>
        <input type="text" class="form-control" name="bookPrice"
            placeholder="Enter book Price" value="{{books.bookPrice}}">
        <div class="text-danger">
            {{books.bookPriceError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="#">Book Description</label>
            <input type="text" class="form-control" name="bookDescription"
                placeholder="Enter book Description"
                value="{{books.bookDescription}}">
            <div class="text-danger">
                {{books.bookDescError}}
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="#">Book Author</label>
            <input type="text" class="form-control" name="bookAuthor"
                placeholder="Enter book Author" value="{{books.bookAuthor}}">
            <div class="text-danger">
                {{books.bookAuthorError}}
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>
            Submit</button>
        <a class="btn btn-secondary" href="/books/list"><i class="fa
                fa-list-alt"></i>View All</a>
    </div>
</form>